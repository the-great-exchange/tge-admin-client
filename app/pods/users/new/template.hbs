<div class="panel panel-default">
  <div class="panel-heading">
    <span class="h3">Add a new user</span>
  </div>
  <div class="panel-body">
    <form>
      <div class="form-group">
        <label for="Name">Name</label>
        {{input value=model.name class="form-control" placeholder="Name"}}
      </div>
      <div class="form-group">
        <label for="email">Email address</label>
        {{input value=model.email class="form-control" type="email" placeholder="Email"}}
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary btn-lg" {{action "save"}}>Save</button>
        <button class="btn btn-default btn-lg" {{action "cancel"}}>Cancel</button>
      </div>
    </form>
  </div>
</div>
