<div class="padding-vertical-8"></div>
<div class="panel panel-default">
  <div class="panel-body">
    <button type="button" class="btn btn-info right" {{action "new"}}><span class="glyphicon glyphicon-plus"></span> New person</button>
    <div class="input-group padding-horizontal-5">
      <span class="input-group-addon"><span class="glyphicon glyphicon-filter"></span></span>
      {{input value=filterText type="text" class="form-control" placeholder="Start typing to filter..."}}
      <span class="input-group-btn">
        <button class="btn btn-warning" type="button" disabled={{if isClearFilterDisabled "disabled"}} {{action "clearFilter"}}>
          <span class="glyphicon glyphicon-remove"></span>
        </button>
      </span>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <table class="table table-striped table-hover">
        <thead>
          <th>Name</th>
          <th>Email address</th>
          <th>Phone number</th>
        </thead>
        <tbody>
          {{#each list as |person|}}
          <tr {{action 'edit' person}}>
            <td>{{person.name}}</td>
            <td>{{person.email}}</td>
            <td>{{person.phoneNumber}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
