<div class="well">
  <div class="input-group input-group-lg">
    <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
    {{input value=filterText type="text" class="form-control" placeholder="Find someone..." }}
    {{#if filterText}}
      <span class="input-group-btn">
        <button {{action "clearFilter"}} class="btn btn-danger" type="button"><span class="glyphicon glyphicon-remove"></span></button>
      </span>
    {{/if}}
  </div>
</div>
<div class="list-group">
  <a href="#" class="list-group-item list-group-item-info h4" {{action "new"}}>
    <span class="glyphicon glyphicon-plus"></span> Add a new contact
  </a>
  {{#each sortedAndFilteredContacts as |contact|}}
    <a class="list-group-item" href="#" {{action "show" contact}}>
      <span class="glyphicon glyphicon-user"></span>
      <strong>{{contact.name}}</strong><br>
      {{contact.email}}
    </a>
  {{/each}}
</div>
